<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="20dp"
    android:background="@drawable/music"
    android:orientation="horizontal"
    android:layout_margin="3dp">

    <LinearLayout
        android:layout_width="190dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/project_commit_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/bm"
            android:text="Title"
            android:textColor="@color/blue"
            android:textSize="37dp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/tv_commit_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:text="Admin"
            android:fontFamily="@font/bm"
            android:textSize="17dp"
            android:textColor="@color/blue"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_commit_instruments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:text="Instruments"
            android:fontFamily="@font/bm"
            android:textColor="@color/blue"
            android:textStyle="italic"
            android:textSize="10dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/tv_commit_recent"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bm"
            android:text="Recent Update"
            android:textColor="@color/blue"
            android:textSize="13dp"
            android:textStyle="italic"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/myproject_commit_list_seekBar"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:thumb="@drawable/thumb"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/show_commit_list_play_time"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00 / 0:00"
            android:textColor="@color/blue"
            android:textSize="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/myproject_commit_list_play"
                android:layout_width="20dp"
                android:layout_marginLeft="48dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/play" />

            <ImageButton
                android:id="@+id/myproject_commit_list_pause"
                android:layout_width="20dp"
                android:layout_marginLeft="30dp"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:src="@drawable/stop" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>